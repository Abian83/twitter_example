<h2>Add task to:</h2>
<%= form_tag(search_tweets_path, method: "get") do %>
  <%= label_tag(:hashtag, "Twitter handler:") %>
  <%= text_field_tag(:hashtag) %>
  <%=select_tag "Projects" ,options_for_select(@projects), :id => "project_id"%>
  <%=select_tag "Task List" , options_for_select(@task_lists),:id => "task_list_id"%>
  <%= label_tag(:name, "Task Name:") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Search") %>
<% end %>

<h1>Last tweets found</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Tweet</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.message %></td>
    <td><%= tweet.tweet_id %></td>
    <td><%= tweet.author %></td>
    <td><%= link_to 'Show', tweet %></td>
    <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
    <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

